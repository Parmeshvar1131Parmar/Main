      <div class="flex">
        <fieldset>
          <legend>Language Known</legend>
          <table>
            <tr>
              <td>
                <input
                  type="checkbox"
                  name="hindi"
                  id="hindi"
                  autocomplete="language"
                />
                <label for="hindi">Hindi : </label>
                <input type="checkbox" name="hindi" id="hindi" />

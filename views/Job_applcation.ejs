  <body>
    <h2 id="job_application">Job Application Form</h2>
    <form
      name="job_application"
      method="get"
      action="post"
      enctype="multipart/form-data"
      autocomplete="on"
      target="_blank"
    >
      <fieldset>
        <legend>Basic Detail</legend>
        <table>
          <tr>
            <td tabindex="0">
              First Name
              <input
                type="text"
                name="firstname"
                id="firstname"
                placeholder="Enter Your Good Name"
                maxlength="40"
                required
              />
            </td>
            <td tabindex="1">
              Last Name
              <input
                type="text"
                name="lastname"
                id="lastname"
                placeholder="Enter Your Last Name"
              />
            </td>
          </tr>
          <tr>
            <td tabindex="2">
              Designation
              <input
                type="text"
                name="designation"
                id="designation"
                placeholder="Your Designation"
              />
            </td>
            <td tabindex="3">
              Address 1
              <input
                type="text"
                name="address1"
                id="address1"
                placeholder="Permenent Address"
                minlength="8"
                autocomplete="address-line1"
              />
            </td>
          </tr>
          <tr>
            <td tabindex="4">
              Email
              <input
                type="text"
                name="email"
                id="email"
                placeholder="Your Email"
                autocomplete="email"
              />
            </td>
            <td tabindex="5">
              Address 2
              <input
                type="text"
                name="address2"
                id="address2"
                placeholder="Temperory Address"
                autocomplete="address-level2"
              />
            </td>
          </tr>
          <tr>
            <td tabindex="6">
              Phone Number
              <input
                type="text"
                name="phonenumber"
                id="phonenumber"
                placeholder="Enter your email"
              />
            </td>
            <td tabindex="7">
              City
              <input
                type="text"
                name="city"
                id="city"
                placeholder="Enter your City"
              />
            </td>
          </tr>
          <tr>
            <td tabindex="8">
              <label for="gender">Gender</label>
              <input type="radio" value="male" name="gender" id="gender" />
              <label for="Male">Male</label>
              <input type="radio" value="female" name="gender" id="gender" />
              <label for="Male">Female</label>
            </td>

            <td tabindex="9">
              <label for="state">State</label>
              <input list="states" id="state" name="state" />
              <datalist id="states">
                <option value="Gujrat"></option>
                <option value="Delhi"></option>
                <option value="Maharastra"></option>
                <option value="Goa"></option>
                <option value="Karnataka"></option>
              </datalist>
            </td>
          </tr>
          <tr>
            <td tabindex="10">
              <label for="realtionshipstatus">RelationShip Status</label>
              <input
                list="realtionship"
                id="realtionshipstatus"
                name="realtionshipstatus"
              />
              <datalist id="realtionship">
                <option value="Married"></option>
                <option value="Unmarried"></option>
              </datalist>
            </td>
            <td tabindex="11">
              Date of Birth <input type="text" name="dob" id="dob" />
            </td>
          </tr>
          <tr>
            <td>Zip Code <input type="text" name="zipcode" id="zipcode" /></td>
          </tr>
        </table>
      </fieldset>

